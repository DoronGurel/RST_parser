( Root (span 1 54)
  ( Nucleus (span 1 3) (rel2par span)
    ( Nucleus (span 1 2) (rel2par span)
      ( Nucleus (leaf 1) (rel2par span) (text _!The Justice Department has distributed these new guidelines for U.S. Attorneys_!) )
      ( Satellite (leaf 2) (rel2par elaboration-object-attribute-e) (text _!prosecuting RICO cases._!) )
    )
    ( Satellite (leaf 3) (rel2par elaboration-additional) (text _!A related editorial appears today._!) )
  )
  ( Satellite (span 4 54) (rel2par summary-n)
    ( Nucleus (span 4 12) (rel2par span)
      ( Nucleus (span 4 9) (rel2par span)
        ( Nucleus (span 4 6) (rel2par span)
          ( Nucleus (span 4 5) (rel2par Same-Unit)
            ( Nucleus (leaf 4) (rel2par span) (text _!Under {RICO}, the government may seek a temporary restraining order_!) )
            ( Satellite (leaf 5) (rel2par restatement-e) (text _!(TRO)_!) )
          )
          ( Nucleus (leaf 6) (rel2par Same-Unit) (text _!upon the filing of a RICO indictment,_!) )
        )
        ( Satellite (span 7 9) (rel2par purpose)
          ( Nucleus (leaf 7) (rel2par span) (text _!in order to preserve all forfeitable assets_!) )
          ( Satellite (span 8 9) (rel2par circumstance)
            ( Nucleus (leaf 8) (rel2par List) (text _!until the trial is completed_!) )
            ( Nucleus (leaf 9) (rel2par List) (text _!and judgment entered._!) )
          )
        )
      )
      ( Satellite (span 10 12) (rel2par elaboration-additional)
        ( Nucleus (leaf 10) (rel2par span) (text _!Such orders can have a wide-ranging impact on third parties_!) )
        ( Satellite (span 11 12) (rel2par elaboration-object-attribute-e)
          ( Nucleus (leaf 11) (rel2par span) (text _!who do business with the defendants,_!) )
          ( Satellite (leaf 12) (rel2par example-e) (text _!including clients, vendors, banks, investors, creditors, dependents, and others._!) )
        )
      )
    )
    ( Satellite (span 13 54) (rel2par elaboration-additional)
      ( Nucleus (span 13 17) (rel2par span)
        ( Nucleus (span 13 15) (rel2par span)
          ( Nucleus (span 13 14) (rel2par Same-Unit)
            ( Nucleus (leaf 13) (rel2par span) (text _!Some highly publicized cases_!) )
            ( Satellite (leaf 14) (rel2par elaboration-object-attribute-e) (text _!involving RICO TROs_!) )
          )
          ( Nucleus (leaf 15) (rel2par Same-Unit) (text _!have been the subject of considerable criticism in the press,_!) )
        )
        ( Satellite (span 16 17) (rel2par reason)
          ( Nucleus (leaf 16) (rel2par span) (text _!because of a perception_!) )
          ( Satellite (leaf 17) (rel2par elaboration-object-attribute-e) (text _!that pre-trial freezing of assets is tantamount to a seizure of property without due process._!) )
        )
      )
      ( Satellite (span 18 54) (rel2par elaboration-additional)
        ( Nucleus (span 18 21) (rel2par span)
          ( Nucleus (span 18 20) (rel2par span)
            ( Satellite (leaf 18) (rel2par purpose) (text _!In order to ensure that the rights of all interested parties are protected,_!) )
            ( Nucleus (span 19 20) (rel2par span)
              ( Nucleus (leaf 19) (rel2par span) (text _!the Criminal Division has instituted the following requirements_!) )
              ( Satellite (leaf 20) (rel2par purpose) (text _!to control the use of TROs in RICO prosecutions._!) )
            )
          )
          ( Satellite (leaf 21) (rel2par comment) (text _!(It should be noted that these requirements are in addition to any other existing requirements, such as review by the Asset Forfeiture Office.):_!) )
        )
        ( Satellite (span 22 54) (rel2par elaboration-set-member)
          ( Nucleus (span 22 50) (rel2par span)
            ( Nucleus (span 22 26) (rel2par List)
              ( Nucleus (leaf 22) (rel2par span) (text _!1. As part of the approval process for RICO prosecutions, the prosecutor must submit any proposed forfeiture TRO for review by the Organized Crime and Racketeering Section._!) )
              ( Satellite (span 23 26) (rel2par elaboration-additional)
                ( Satellite (leaf 23) (rel2par attribution) (text _!The prosecutor must show_!) )
                ( Nucleus (span 24 26) (rel2par span)
                  ( Nucleus (span 24 25) (rel2par Same-Unit)
                    ( Nucleus (leaf 24) (rel2par span) (text _!that less-intrusive remedies_!) )
                    ( Satellite (leaf 25) (rel2par example-e) (text _!(such as bonds)_!) )
                  )
                  ( Nucleus (leaf 26) (rel2par Same-Unit) (text _!are not likely to preserve the assets for forfeiture in the event of a conviction._!) )
                )
              )
            )
            ( Nucleus (span 27 31) (rel2par List)
              ( Satellite (leaf 27) (rel2par circumstance) (text _!2. In seeking approval of a TRO,_!) )
              ( Nucleus (span 28 31) (rel2par span)
                ( Nucleus (span 28 29) (rel2par span)
                  ( Nucleus (leaf 28) (rel2par span) (text _!the prosecutor must articulate any anticipated impact_!) )
                  ( Satellite (leaf 29) (rel2par elaboration-object-attribute-e) (text _!that forfeiture and the TRO would have on innocent third parties,_!) )
                )
                ( Satellite (span 30 31) (rel2par circumstance)
                  ( Nucleus (leaf 30) (rel2par span) (text _!balanced against the government's need_!) )
                  ( Satellite (leaf 31) (rel2par elaboration-object-attribute-e) (text _!to preserve the assets._!) )
                )
              )
            )
            ( Nucleus (span 32 37) (rel2par List)
              ( Satellite (span 32 34) (rel2par circumstance)
                ( Nucleus (span 32 33) (rel2par Same-Unit)
                  ( Nucleus (leaf 32) (rel2par span) (text _!3. In deciding whether forfeiture_!) )
                  ( Satellite (leaf 33) (rel2par elaboration-additional-e) (text _!(and, hence, a TRO)_!) )
                )
                ( Nucleus (leaf 34) (rel2par Same-Unit) (text _!is appropriate,_!) )
              )
              ( Nucleus (leaf 35) (rel2par span) (text _!the Section will consider the nature and severity of the offense;_!) )
              ( Satellite (span 36 37) (rel2par explanation-argumentative)
                ( Nucleus (leaf 36) (rel2par span) (text _!the government's policy is not to seek the fullest forfeiture permissible under the law_!) )
                ( Satellite (leaf 37) (rel2par circumstance) (text _!where that forfeiture would be disproportionate to the defendant's crime._!) )
              )
            )
            ( Nucleus (span 38 50) (rel2par List)
              ( Satellite (leaf 38) (rel2par circumstance) (text _!4. When a RICO TRO is being sought,_!) )
              ( Nucleus (span 39 50) (rel2par span)
                ( Satellite (leaf 39) (rel2par attribution) (text _!the prosecutor is required, at the earliest appropriate time, to state publicly_!) )
                ( Nucleus (span 40 50) (rel2par span)
                  ( Nucleus (leaf 40) (rel2par span) (text _!that the government's request for a TRO, and eventual forfeiture, is made in full recognition of the rights of third parties_!) )
                  ( Satellite (span 41 50) (rel2par interpretation-s)
                    ( Nucleus (leaf 41) (rel2par Same-Unit) (text _!-- that is,_!) )
                    ( Nucleus (span 42 50) (rel2par Same-Unit)
                      ( Satellite (leaf 42) (rel2par circumstance-e) (text _!in requesting the TRO,_!) )
                      ( Nucleus (span 43 50) (rel2par span)
                        ( Nucleus (leaf 43) (rel2par List) (text _!the government will not seek to disrupt the normal, legitimate business activities of the defendant;_!) )
                        ( Nucleus (span 44 45) (rel2par List)
                          ( Nucleus (leaf 44) (rel2par span) (text _!will not seek through use of the relation-back doctrine to take from third parties assets_!) )
                          ( Satellite (leaf 45) (rel2par elaboration-object-attribute-e) (text _!legitimately transferred to them;_!) )
                        )
                        ( Nucleus (span 46 47) (rel2par List)
                          ( Nucleus (leaf 46) (rel2par span) (text _!will not seek to vitiate legitimate business transactions_!) )
                          ( Satellite (leaf 47) (rel2par elaboration-object-attribute-e) (text _!occurring between the defendant and third parties;_!) )
                        )
                        ( Nucleus (span 48 50) (rel2par List)
                          ( Nucleus (leaf 48) (rel2par span) (text _!and will, in all other respects, assist the court_!) )
                          ( Satellite (span 49 50) (rel2par elaboration-additional)
                            ( Nucleus (leaf 49) (rel2par span) (text _!in ensuring that the rights of third parties are protected,_!) )
                            ( Satellite (leaf 50) (rel2par means) (text _!through proceeding under {RICO} and otherwise._!) )
                          )
                        )
                      )
                    )
                  )
                )
              )
            )
          )
          ( Satellite (span 51 54) (rel2par elaboration-additional)
            ( Nucleus (span 51 52) (rel2par span)
              ( Satellite (leaf 51) (rel2par attribution) (text _!The Division expects_!) )
              ( Nucleus (leaf 52) (rel2par span) (text _!that the prosecutor will announce these principles_!) )
            )
            ( Satellite (span 53 54) (rel2par circumstance)
              ( Nucleus (leaf 53) (rel2par span) (text _!either at the time the indictment is returned or, at the latest, at the first proceeding before the court_!) )
              ( Satellite (leaf 54) (rel2par elaboration-object-attribute-e) (text _!concerning the TRO._!) )
            )
          )
        )
      )
    )
  )
)
