( Root (span 1 38)
  ( Nucleus (span 1 26) (rel2par span)
    ( Nucleus (span 1 3) (rel2par span)
      ( Nucleus (span 1 2) (rel2par Same-Unit)
        ( Nucleus (leaf 1) (rel2par span) (text _!Prospect Group Inc.,_!) )
        ( Satellite (leaf 2) (rel2par elaboration-additional-e) (text _!whose recent hostile tender offer for Recognition Equipment Inc. failed for lack of financing,_!) )
      )
      ( Nucleus (leaf 3) (rel2par Same-Unit) (text _!apparently has gained a measure of control over the troubled company anyway._!) )
    )
    ( Satellite (span 4 26) (rel2par explanation-argumentative)
      ( Nucleus (leaf 4) (rel2par span) (text _!As part of what a Recognition spokeswoman termed an "amiable agreement," Prospect Group will wind up with control of top management posts and an increased stake in the maker of data management equipment._!) )
      ( Satellite (span 5 26) (rel2par elaboration-additional)
        ( Nucleus (span 5 16) (rel2par span)
          ( Nucleus (span 5 6) (rel2par List)
            ( Nucleus (leaf 5) (rel2par List) (text _!In a management restructuring, Thomas L. Ringer resigned as chairman, chief executive and a director,_!) )
            ( Nucleus (leaf 6) (rel2par List) (text _!while Israel Sheinberg resigned as a director._!) )
          )
          ( Nucleus (leaf 7) (rel2par List) (text _!Mr. Sheinberg remains as executive vice president._!) )
          ( Nucleus (span 8 13) (rel2par List)
            ( Nucleus (span 8 11) (rel2par span)
              ( Nucleus (span 8 10) (rel2par Same-Unit)
                ( Nucleus (leaf 8) (rel2par span) (text _!Thomas M. Hurley and Robert A. Vanourek,_!) )
                ( Satellite (span 9 10) (rel2par elaboration-object-attribute-e)
                  ( Nucleus (leaf 9) (rel2par span) (text _!who had been designated to take over Recognition's top spots_!) )
                  ( Satellite (leaf 10) (rel2par condition) (text _!had Prospect's tender offer succeeded,_!) )
                )
              )
              ( Nucleus (leaf 11) (rel2par Same-Unit) (text _!were named co-chief executives and directors._!) )
            )
            ( Satellite (span 12 13) (rel2par background)
              ( Nucleus (leaf 12) (rel2par List) (text _!Mr. Hurley was formerly a vice president and general manager of an Avery International division;_!) )
              ( Nucleus (leaf 13) (rel2par List) (text _!Mr. Vanourek was a former group vice president of Pitney Bowes Inc._!) )
            )
          )
          ( Nucleus (span 14 15) (rel2par List)
            ( Nucleus (leaf 14) (rel2par span) (text _!In addition, the agreement calls for Gilbert H. Lamphere, chairman of Prospect Group's executive committee, to be named chairman of a restructured board_!) )
            ( Satellite (leaf 15) (rel2par elaboration-additional-e) (text _!that will include four new independent directors._!) )
          )
          ( Nucleus (leaf 16) (rel2par List) (text _!Also named to the revised board was Thomas A. Loose, Recognition's senior vice president and general counsel._!) )
        )
        ( Satellite (span 17 26) (rel2par elaboration-additional)
          ( Nucleus (span 17 19) (rel2par span)
            ( Nucleus (leaf 17) (rel2par span) (text _!Prospect, a New York-based leveraged buy-out firm, also agreed to invest $15 million in Recognition,_!) )
            ( Satellite (span 18 19) (rel2par elaboration-additional)
              ( Nucleus (leaf 18) (rel2par span) (text _!which in turn agreed to repurchase as much as $20 million of its stock._!) )
              ( Satellite (leaf 19) (rel2par interpretation-s) (text _!That would increase Prospect's ownership of the company's fully-diluted shares outstanding to 20% from 14.1%._!) )
            )
          )
          ( Satellite (span 20 26) (rel2par elaboration-additional)
            ( Nucleus (leaf 20) (rel2par span) (text _!Under the agreement, Prospect is permitted to increase its stake in Recognition to 30%._!) )
            ( Satellite (span 21 26) (rel2par elaboration-additional)
              ( Nucleus (span 21 22) (rel2par List)
                ( Satellite (leaf 21) (rel2par attribution) (text _!Beyond that, Prospect said_!) )
                ( Nucleus (leaf 22) (rel2par span) (text _!it wouldn't offer to acquire additional shares for less than $11.25 a share during the next year or less than $14.06 a share during the subsequent two years._!) )
              )
              ( Nucleus (span 23 26) (rel2par List)
                ( Satellite (leaf 23) (rel2par attribution) (text _!Recognition also said_!) )
                ( Nucleus (span 24 26) (rel2par span)
                  ( Nucleus (leaf 24) (rel2par span) (text _!it obtained a commitment from Chemical Bank and Bank of Boston_!) )
                  ( Satellite (span 25 26) (rel2par elaboration-object-attribute-e)
                    ( Nucleus (leaf 25) (rel2par span) (text _!to convert an estimated $18 million in bank debt to a new, 24-month secured term loan_!) )
                    ( Satellite (leaf 26) (rel2par elaboration-object-attribute-e) (text _!to be repaid through the sale of certain assets._!) )
                  )
                )
              )
            )
          )
        )
      )
    )
  )
  ( Satellite (span 27 38) (rel2par background)
    ( Nucleus (span 27 34) (rel2par span)
      ( Nucleus (span 27 29) (rel2par span)
        ( Satellite (leaf 27) (rel2par attribution) (text _!In August, Recognition said_!) )
        ( Nucleus (span 28 29) (rel2par span)
          ( Nucleus (leaf 28) (rel2par Cause-Result) (text _!it was in violation of certain terms of its debt agreements with bank lenders_!) )
          ( Nucleus (leaf 29) (rel2par Cause-Result) (text _!because of a $3.9 million loss for the third quarter ended July 31._!) )
        )
      )
      ( Satellite (span 30 34) (rel2par explanation-argumentative)
        ( Nucleus (leaf 30) (rel2par span) (text _!The company attributed the loss to declining revenue and litigation costs_!) )
        ( Satellite (span 31 34) (rel2par elaboration-object-attribute-e)
          ( Nucleus (leaf 31) (rel2par span) (text _!relating to criminal charges against the company and two former executives, William G. Moore Jr. and Robert W. Reedy._!) )
          ( Satellite (span 32 34) (rel2par elaboration-additional)
            ( Nucleus (leaf 32) (rel2par span) (text _!The former executives were indicted last October on charges of fraud, theft and conspiracy_!) )
            ( Satellite (span 33 34) (rel2par elaboration-object-attribute-e)
              ( Nucleus (leaf 33) (rel2par span) (text _!related to efforts by the company_!) )
              ( Satellite (leaf 34) (rel2par elaboration-object-attribute-e) (text _!to win $400 million in Postal Service contracts._!) )
            )
          )
        )
      )
    )
    ( Satellite (span 35 38) (rel2par elaboration-additional)
      ( Nucleus (span 35 36) (rel2par span)
        ( Satellite (leaf 35) (rel2par attribution) (text _!Recognition Equipment said_!) )
        ( Nucleus (leaf 36) (rel2par span) (text _!it expected to put the agreement with Prospect to a vote of its stockholders at a special meeting in January._!) )
      )
      ( Satellite (span 37 38) (rel2par elaboration-additional)
        ( Nucleus (leaf 37) (rel2par List) (text _!In New York Stock Exchange composite trading, Recognition rose 87.5 cents to $6.625._!) )
        ( Nucleus (leaf 38) (rel2par List) (text _!Prospect slipped 25 cents to $10.50 in national over-the-counter trading._!) )
      )
    )
  )
)
