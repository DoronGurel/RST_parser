( Root (span 1 36)
  ( Nucleus (span 1 33) (rel2par span)
    ( Nucleus (span 1 7) (rel2par span)
      ( Nucleus (span 1 5) (rel2par span)
        ( Satellite (span 1 3) (rel2par attribution)
          ( Nucleus (leaf 1) (rel2par Same-Unit) (text _!Bank of New England Corp.,_!) )
          ( Nucleus (span 2 3) (rel2par Same-Unit)
            ( Satellite (leaf 2) (rel2par purpose-e) (text _!seeking to streamline its business after a year of weak earnings and mounting loan problems,_!) )
            ( Nucleus (leaf 3) (rel2par span) (text _!said_!) )
          )
        )
        ( Nucleus (span 4 5) (rel2par span)
          ( Nucleus (leaf 4) (rel2par List) (text _!it will sell some operations_!) )
          ( Nucleus (leaf 5) (rel2par List) (text _!and lay off 4% of its work force._!) )
        )
      )
      ( Satellite (span 6 7) (rel2par explanation-argumentative)
        ( Satellite (leaf 6) (rel2par attribution) (text _!The bank holding company also reported_!) )
        ( Nucleus (leaf 7) (rel2par span) (text _!that third-quarter profit dropped 41%, to $42.7 million, or 61 cents a share, from the year-earlier $72.3 million, or $1.04 a share._!) )
      )
    )
    ( Satellite (span 8 33) (rel2par elaboration-general-specific)
      ( Nucleus (span 8 27) (rel2par List)
        ( Nucleus (span 8 14) (rel2par span)
          ( Nucleus (span 8 9) (rel2par span)
            ( Satellite (leaf 8) (rel2par attribution) (text _!Among its restructuring measures, the company said_!) )
            ( Nucleus (leaf 9) (rel2par span) (text _!it plans to sell 53 of its 453 branch offices and to lay off 800 employees._!) )
          )
          ( Satellite (span 10 14) (rel2par evaluation-s)
            ( Nucleus (leaf 10) (rel2par List) (text _!Altogether, employment is expected to decline to less than 16,000 from the current level of about 18,000._!) )
            ( Nucleus (span 11 14) (rel2par List)
              ( Nucleus (span 11 12) (rel2par span)
                ( Satellite (leaf 11) (rel2par attribution) (text _!Walter Connolly, chairman, said in an interview_!) )
                ( Nucleus (leaf 12) (rel2par span) (text _!that the company expects to record pretax gains of $100 million to $125 million from the sale of its leasing operations and of certain financial processing services._!) )
              )
              ( Satellite (span 13 14) (rel2par elaboration-additional)
                ( Satellite (leaf 13) (rel2par attribution) (text _!In a prepared statement, the company said_!) )
                ( Nucleus (leaf 14) (rel2par span) (text _!it expects to realize those gains before year end._!) )
              )
            )
          )
        )
        ( Satellite (span 15 27) (rel2par evaluation-s)
          ( Satellite (span 15 19) (rel2par antithesis)
            ( Nucleus (span 15 16) (rel2par List)
              ( Nucleus (leaf 15) (rel2par span) (text _!Nonperforming assets continued to pile up in the latest quarter,_!) )
              ( Satellite (leaf 16) (rel2par elaboration-general-specific-e) (text _!rising to $900 million, or 3.52% of loans and leases, from $667 million, or 2.68%, at the end of the second quarter._!) )
            )
            ( Nucleus (span 17 19) (rel2par List)
              ( Nucleus (span 17 18) (rel2par span)
                ( Nucleus (leaf 17) (rel2par span) (text _!Some $170 million of the $233 million increase in nonperforming loans was related to real estate,_!) )
                ( Satellite (leaf 18) (rel2par elaboration-additional) (text _!and roughly three-quarters of that was in the troubled New England market,_!) )
              )
              ( Satellite (leaf 19) (rel2par attribution) (text _!according to Richard Driscoll, vice chairman._!) )
            )
          )
          ( Nucleus (span 20 27) (rel2par span)
            ( Nucleus (span 20 23) (rel2par List)
              ( Satellite (leaf 20) (rel2par attribution) (text _!Mr. Driscoll said_!) )
              ( Nucleus (span 21 23) (rel2par span)
                ( Nucleus (leaf 21) (rel2par Same-Unit) (text _!that,_!) )
                ( Nucleus (span 22 23) (rel2par Same-Unit)
                  ( Satellite (leaf 22) (rel2par concession-e) (text _!despite continued weakness in the region's real estate market,_!) )
                  ( Nucleus (leaf 23) (rel2par span) (text _!Bank of New England expects the rate of increase in nonperforming assets to slow in coming quarters._!) )
                )
              )
            )
            ( Nucleus (span 24 27) (rel2par List)
              ( Nucleus (span 24 25) (rel2par span)
                ( Satellite (leaf 24) (rel2par attribution) (text _!Mr. Connolly noted_!) )
                ( Nucleus (leaf 25) (rel2par span) (text _!that net third-quarter charge-offs, at $63 million, improved slightly from the $67 million in the second quarter._!) )
              )
              ( Satellite (span 26 27) (rel2par elaboration-additional)
                ( Satellite (leaf 26) (rel2par attribution) (text _!And he indicated_!) )
                ( Nucleus (leaf 27) (rel2par span) (text _!that more substantial improvement is expected in the next couple of quarters._!) )
              )
            )
          )
        )
      )
      ( Nucleus (span 28 33) (rel2par List)
        ( Satellite (span 28 29) (rel2par circumstance)
          ( Nucleus (leaf 28) (rel2par List) (text _!The company increased its loan loss reserve to $354 million from $342 million at the end of the second quarter._!) )
          ( Nucleus (leaf 29) (rel2par List) (text _!Total assets slipped to $31.4 billion, from $32 billion as of June 30._!) )
        )
        ( Nucleus (span 30 33) (rel2par span)
          ( Nucleus (span 30 31) (rel2par span)
            ( Satellite (leaf 30) (rel2par attribution) (text _!Among other restructuring measures, the bank said_!) )
            ( Nucleus (leaf 31) (rel2par span) (text _!it will close its loan production offices in Chicago, New York and Philadelphia._!) )
          )
          ( Satellite (span 32 33) (rel2par explanation-argumentative)
            ( Nucleus (leaf 32) (rel2par span) (text _!The Chicago office figured prominently in the bank's problems earlier this year,_!) )
            ( Satellite (leaf 33) (rel2par circumstance) (text _!when $65 million in loans to Chicago businessman William Stoecker went sour._!) )
          )
        )
      )
    )
  )
  ( Satellite (span 34 36) (rel2par comment)
    ( Nucleus (leaf 34) (rel2par span) (text _!In an internal memorandum to employees, Messrs. Connolly and Driscoll described the restructuring as an effort_!) )
    ( Satellite (span 35 36) (rel2par elaboration-object-attribute-e)
      ( Nucleus (leaf 35) (rel2par span) (text _!to continue rationalizing operations_!) )
      ( Satellite (leaf 36) (rel2par elaboration-object-attribute-e) (text _!assembled during a series of mergers over the past five years._!) )
    )
  )
)
