          ( Nucleus (span 161 173) (rel2par List)
            ( Nucleus (span 161 165) (rel2par span)
              ( Nucleus (span 161 162) (rel2par span)
                ( Nucleus (leaf 161) (rel2par Cause-Result) (text _!It might be feared that even thinking about lower budgets will hurt national security_!) )
                ( Nucleus (leaf 162) (rel2par Cause-Result) (text _!because the door will be opened to opportunistic budget cutting by an irresponsible Congress._!) )
              )
              ( Satellite (span 163 165) (rel2par evaluation-s)
                ( Nucleus (span 163 164) (rel2par span)
                  ( Nucleus (leaf 163) (rel2par span) (text _!This argument plays well in the atmosphere of gaming and mistrust_!) )
                  ( Satellite (leaf 164) (rel2par elaboration-additional-e) (text _!permeating the Pentagon and Congress,_!) )
                )
                ( Satellite (leaf 165) (rel2par evaluation-s) (text _!and unfortunately, there is some truth to it._!) )
              )
            )
            ( Satellite (span 166 173) (rel2par interpretation-s)
              ( Nucleus (leaf 166) (rel2par span) (text _!But in the end, it must be rejected for logical as well as moral reasons._!) )
              ( Satellite (span 167 173) (rel2par explanation-argumentative)
                ( Nucleus (span 167 170) (rel2par span)
                  ( Nucleus (span 167 168) (rel2par Same-Unit)
                    ( Nucleus (leaf 167) (rel2par span) (text _!To say that the Pentagon should act irresponsibly_!) )
                    ( Satellite (leaf 168) (rel2par cause) (text _!because acting responsibly will provoke Congress into acting irresponsibly_!) )
                  )
                  ( Nucleus (span 169 170) (rel2par Same-Unit)
                    ( Nucleus (leaf 169) (rel2par span) (text _!leads to the conclusion_!) )
                    ( Satellite (leaf 170) (rel2par elaboration-object-attribute-e) (text _!that the Pentagon should deliberately exaggerate its needs in the national interest;_!) )
                  )
                )
                ( Satellite (span 171 173) (rel2par interpretation-s)
                  ( Nucleus (span 171 172) (rel2par span)
                    ( Nucleus (leaf 171) (rel2par span) (text _!in other words, that it is justified in committing a crime_!) )
                    ( Satellite (leaf 172) (rel2par elaboration-general-specific-e) (text _!-- lying to Congress --_!) )
                  )
                  ( Satellite (leaf 173) (rel2par reason) (text _!because it is morally superior._!) )
                )
              )
            )
          )
          ( Nucleus (span 174 184) (rel2par List)
            ( Nucleus (span 174 180) (rel2par Contrast)
              ( Nucleus (leaf 174) (rel2par Contrast) (text _!Strategy is not a game between the Pentagon and Congress;_!) )
              ( Nucleus (span 175 180) (rel2par Contrast)
                ( Nucleus (span 175 176) (rel2par span)
                  ( Nucleus (leaf 175) (rel2par span) (text _!it is the art of the possible in a world_!) )
                  ( Satellite (leaf 176) (rel2par elaboration-object-attribute-e) (text _!where constraints force us to choose between unpleasant or imperfect alternatives._!) )
                )
                ( Satellite (span 177 180) (rel2par explanation-argumentative)
                  ( Satellite (leaf 177) (rel2par condition) (text _!If we want meaningful priorities,_!) )
                  ( Nucleus (span 178 180) (rel2par span)
                    ( Nucleus (span 178 179) (rel2par span)
                      ( Nucleus (leaf 178) (rel2par span) (text _!we must understand the trade-offs_!) )
                      ( Satellite (leaf 179) (rel2par elaboration-object-attribute-e) (text _!they imply_!) )
                    )
                    ( Satellite (leaf 180) (rel2par temporal-before) (text _!before we make commitments._!) )
                  )
                )
              )
            )
            ( Nucleus (span 181 184) (rel2par Contrast)
              ( Nucleus (leaf 181) (rel2par Contrast) (text _!Strategy is not a separate event in an idealized sequence of discrete events;_!) )
              ( Nucleus (span 182 184) (rel2par Contrast)
