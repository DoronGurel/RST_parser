( Root (span 1 40)
  ( Nucleus (span 1 20) (rel2par span)
    ( Nucleus (span 1 13) (rel2par span)
      ( Nucleus (span 1 4) (rel2par span)
        ( Nucleus (leaf 1) (rel2par span) (text _!Mobil Corp. is in the midst_!) )
        ( Satellite (span 2 4) (rel2par elaboration-object-attribute-e)
          ( Nucleus (span 2 3) (rel2par Same-Unit)
            ( Nucleus (leaf 2) (rel2par span) (text _!of cutting back its exploration and production group,_!) )
            ( Satellite (leaf 3) (rel2par elaboration-object-attribute-e) (text _!which finds and develops oil and gas reserves in the U.S.,_!) )
          )
          ( Nucleus (leaf 4) (rel2par Same-Unit) (text _!by as much as 15% as part of a new restructuring of that sector of its business._!) )
        )
      )
      ( Satellite (span 5 13) (rel2par elaboration-additional)
        ( Nucleus (span 5 10) (rel2par span)
          ( Nucleus (span 5 9) (rel2par span)
            ( Nucleus (span 5 6) (rel2par List)
              ( Nucleus (leaf 5) (rel2par span) (text _!Management advised employees Friday_!) )
              ( Satellite (leaf 6) (rel2par elaboration-additional) (text _!that it was going to reduce employment in production operations of the group by 8%, or 400 people._!) )
            )
            ( Nucleus (span 7 9) (rel2par List)
              ( Nucleus (span 7 8) (rel2par span)
                ( Nucleus (leaf 7) (rel2par span) (text _!The exploration side of the unit has recently undergone a similar overhaul,_!) )
                ( Satellite (leaf 8) (rel2par consequence-s) (text _!during which it also lost as many as 400 employees,_!) )
              )
              ( Satellite (leaf 9) (rel2par attribution) (text _!a company spokesman said in response to questions._!) )
            )
          )
          ( Satellite (leaf 10) (rel2par background) (text _!Mobil Exploration & Producing U.S. Inc., the group involved, currently has a work force of somewhat less than 5,000._!) )
        )
        ( Satellite (span 11 13) (rel2par circumstance)
          ( Nucleus (leaf 11) (rel2par Sequence) (text _!A few years ago, Mobil restructured the entire company during an industrywide shakeout._!) )
          ( Nucleus (span 12 13) (rel2par Sequence)
            ( Nucleus (leaf 12) (rel2par List) (text _!But since then U.S. oil production has declined_!) )
            ( Nucleus (leaf 13) (rel2par List) (text _!and Mobil wants to focus its oil-finding efforts overseas._!) )
          )
        )
      )
    )
    ( Satellite (span 14 20) (rel2par elaboration-additional)
      ( Nucleus (span 14 16) (rel2par span)
        ( Nucleus (leaf 14) (rel2par span) (text _!Mobil alluded to the work-force cuts last week_!) )
        ( Satellite (span 15 16) (rel2par explanation-argumentative)
          ( Nucleus (leaf 15) (rel2par List) (text _!when it took a $40 million charge as part of its third-quarter earnings_!) )
          ( Nucleus (leaf 16) (rel2par List) (text _!and attributed it to a restructuring._!) )
        )
      )
      ( Satellite (span 17 20) (rel2par elaboration-additional)
        ( Satellite (leaf 17) (rel2par attribution) (text _!Mobil officials said_!) )
        ( Nucleus (span 18 20) (rel2par span)
          ( Nucleus (span 18 19) (rel2par Same-Unit)
            ( Nucleus (leaf 18) (rel2par span) (text _!that it is unlikely any additional charges_!) )
            ( Satellite (leaf 19) (rel2par elaboration-object-attribute-e) (text _!related to this move_!) )
          )
          ( Nucleus (leaf 20) (rel2par Same-Unit) (text _!will be taken in future quarters._!) )
        )
      )
    )
  )
  ( Satellite (span 21 40) (rel2par elaboration-additional)
    ( Nucleus (leaf 21) (rel2par span) (text _!On Wednesday, Mobil will begin offering separation packages and voluntary retirement in its U.S. production operation._!) )
    ( Satellite (span 22 40) (rel2par elaboration-additional)
      ( Nucleus (span 22 25) (rel2par span)
        ( Satellite (leaf 22) (rel2par attribution) (text _!Mobil officials said_!) )
        ( Nucleus (span 23 25) (rel2par span)
          ( Nucleus (span 23 24) (rel2par Same-Unit)
            ( Nucleus (leaf 23) (rel2par span) (text _!they have been studying ways_!) )
            ( Satellite (leaf 24) (rel2par elaboration-additional-e) (text _!of streamlining these operations_!) )
          )
          ( Nucleus (leaf 25) (rel2par Same-Unit) (text _!since early this year._!) )
        )
      )
      ( Satellite (span 26 40) (rel2par elaboration-additional)
        ( Nucleus (span 26 29) (rel2par span)
          ( Nucleus (span 26 27) (rel2par span)
            ( Nucleus (leaf 26) (rel2par List) (text _!During the coming months, layers of management will be peeled away_!) )
            ( Nucleus (leaf 27) (rel2par List) (text _!and regional offices will become more autonomous._!) )
          )
          ( Satellite (span 28 29) (rel2par elaboration-additional)
            ( Nucleus (leaf 28) (rel2par span) (text _!For greater efficiency, employees at those locations will be reorganized into teams responsible for managing the properties under their jurisdiction,_!) )
            ( Satellite (leaf 29) (rel2par attribution) (text _!Mobil said._!) )
          )
        )
        ( Satellite (span 30 40) (rel2par explanation-argumentative)
          ( Nucleus (span 30 31) (rel2par List)
            ( Nucleus (leaf 30) (rel2par span) (text _!"The main feature of the new organization is that each local manager will have both the authority and accountability for profitable and technically sound operations,"_!) )
            ( Satellite (leaf 31) (rel2par attribution) (text _!said Charles E. Spruell, president of the Mobil unit._!) )
          )
          ( Nucleus (span 32 40) (rel2par List)
            ( Nucleus (span 32 34) (rel2par span)
              ( Nucleus (leaf 32) (rel2par span) (text _!Field offices at New Orleans; Houston; Denver; Midland, Tex.; Bakersfield, Calif.; Oklahoma City; and Liberal, Kan., will be maintained._!) )
              ( Satellite (span 33 34) (rel2par antithesis)
                ( Nucleus (leaf 33) (rel2par Contrast) (text _!But the staffs at some of those locations will be slashed_!) )
                ( Nucleus (leaf 34) (rel2par Contrast) (text _!while at others the work force will be increased._!) )
              )
            )
            ( Satellite (span 35 40) (rel2par example)
              ( Nucleus (span 35 38) (rel2par span)
                ( Nucleus (leaf 35) (rel2par Contrast) (text _!For instance, employment in Denver will be reduced to 105 from 430._!) )
                ( Nucleus (span 36 38) (rel2par Contrast)
                  ( Nucleus (span 36 37) (rel2par Same-Unit)
                    ( Nucleus (leaf 36) (rel2par span) (text _!But on the West Coast,_!) )
                    ( Satellite (leaf 37) (rel2par elaboration-object-attribute-e) (text _!where profitable oil production is more likely than in the midcontinent region,_!) )
                  )
                  ( Nucleus (leaf 38) (rel2par Same-Unit) (text _!the Bakersfield, Calif., office staff of 130 will grow by 175 to 305._!) )
                )
              )
              ( Satellite (span 39 40) (rel2par elaboration-additional)
                ( Nucleus (leaf 39) (rel2par span) (text _!The reorganization will "focus on the value and potential of assets,"_!) )
                ( Satellite (leaf 40) (rel2par attribution) (text _!Mr. Spruell said._!) )
              )
            )
          )
        )
      )
    )
  )
)
