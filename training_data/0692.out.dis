                  ( Nucleus (leaf 150) (rel2par Cause-Result) (text _!But ZBB did not involve the strategic planners in the Joint Chiefs of Staff,_!) )
                  ( Nucleus (span 151 152) (rel2par Cause-Result)
                    ( Nucleus (leaf 151) (rel2par span) (text _!and therefore degenerated into a bean-counting drill_!) )
                    ( Satellite (leaf 152) (rel2par elaboration-object-attribute-e) (text _!driven by budget politics._!) )
                  )
                )
                ( Satellite (span 153 154) (rel2par elaboration-additional)
                  ( Nucleus (leaf 153) (rel2par span) (text _!Anyway, ZBB's procedures were so cumbersome_!) )
                  ( Satellite (leaf 154) (rel2par consequence-s) (text _!that everyone involved was crushed under a burden of marginalia._!) )
                )
              )
            )
            ( Nucleus (span 155 160) (rel2par Contrast)
              ( Nucleus (leaf 155) (rel2par span) (text _!A strategic review is fundamentally different._!) )
              ( Satellite (span 156 160) (rel2par explanation-argumentative)
                ( Nucleus (leaf 156) (rel2par span) (text _!It would be run by the joint chiefs under simple directions:_!) )
                ( Satellite (span 157 160) (rel2par elaboration-general-specific)
                  ( Nucleus (leaf 157) (rel2par List) (text _!Produce the best possible force for each budget scenario_!) )
                  ( Nucleus (span 158 160) (rel2par List)
                    ( Nucleus (leaf 158) (rel2par span) (text _!and provide the Secretary of Defense with a comprehensive net assessment_!) )
                    ( Satellite (span 159 160) (rel2par elaboration-object-attribute-e)
                      ( Nucleus (leaf 159) (rel2par span) (text _!of how that force could be used_!) )
                      ( Satellite (leaf 160) (rel2par purpose-e) (text _!to achieve U.S. goals._!) )
