( Root (span 1 87)
  ( Nucleus (span 1 85) (rel2par TextualOrganization)
    ( Nucleus (span 1 77) (rel2par span)
      ( Nucleus (span 1 29) (rel2par Topic-Drift)
        ( Satellite (span 1 23) (rel2par evaluation-n)
          ( Satellite (span 1 11) (rel2par background)
            ( Nucleus (span 1 3) (rel2par span)
              ( Satellite (leaf 1) (rel2par concession) (text _!Energetic and concrete action has been taken in Colombia during the past 60 days against the mafiosi of the drug trade,_!) )
              ( Nucleus (span 2 3) (rel2par span)
                ( Nucleus (leaf 2) (rel2par span) (text _!but it has not been sufficiently effective,_!) )
                ( Satellite (leaf 3) (rel2par explanation-argumentative) (text _!because, unfortunately, it came too late._!) )
              )
            )
            ( Satellite (span 4 11) (rel2par evidence)
              ( Satellite (span 4 7) (rel2par background)
                ( Nucleus (span 4 5) (rel2par Same-Unit)
                  ( Nucleus (leaf 4) (rel2par span) (text _!Ten years ago, the newspaper El Espectador,_!) )
                  ( Satellite (leaf 5) (rel2par elaboration-additional-e) (text _!of which my brother Guillermo was editor,_!) )
                )
                ( Nucleus (span 6 7) (rel2par Same-Unit)
                  ( Nucleus (leaf 6) (rel2par span) (text _!began warning of the rise of the drug mafias and of their leaders' aspirations_!) )
                  ( Satellite (leaf 7) (rel2par elaboration-object-attribute-e) (text _!to control Colombian politics, especially the Congress._!) )
                )
              )
              ( Nucleus (span 8 11) (rel2par span)
                ( Nucleus (leaf 8) (rel2par Same-Unit) (text _!Then,_!) )
                ( Nucleus (span 9 11) (rel2par Same-Unit)
                  ( Satellite (leaf 9) (rel2par concession-e) (text _!when it would have been easier to resist them,_!) )
                  ( Nucleus (span 10 11) (rel2par span)
                    ( Nucleus (leaf 10) (rel2par span) (text _!nothing was done_!) )
                    ( Satellite (leaf 11) (rel2par consequence-s) (text _!and my brother was murdered by the drug mafias three years ago._!) )
                  )
                )
              )
            )
          )
          ( Nucleus (span 12 23) (rel2par span)
            ( Nucleus (span 12 22) (rel2par span)
              ( Nucleus (span 12 13) (rel2par span)
                ( Nucleus (leaf 12) (rel2par span) (text _!The most ruthless dictatorships have not censored their press more brutally than the drug mafias censor Colombia's._!) )
                ( Satellite (leaf 13) (rel2par means) (text _!The censorship is enforced through terrorism and assassination._!) )
              )
              ( Satellite (span 14 22) (rel2par evidence)
                ( Nucleus (span 14 18) (rel2par span)
                  ( Nucleus (leaf 14) (rel2par List) (text _!In the past 10 years about 50 journalists have been silenced forever, murdered._!) )
                  ( Nucleus (span 15 16) (rel2par List)
                    ( Nucleus (leaf 15) (rel2par span) (text _!Within the past two months a bomb exploded in the offices of the El Espectador in Bogota,_!) )
                    ( Satellite (leaf 16) (rel2par cause) (text _!destroying a major part of its installations and equipment._!) )
                  )
                  ( Nucleus (span 17 18) (rel2par List)
                    ( Nucleus (leaf 17) (rel2par span) (text _!And only last week the newspaper Vanguardia Liberal in the city of Bucaramanga was bombed,_!) )
                    ( Satellite (leaf 18) (rel2par cause) (text _!and its installations destroyed._!) )
                  )
                )
                ( Satellite (span 19 22) (rel2par summary-s)
                  ( Nucleus (span 19 20) (rel2par List)
                    ( Nucleus (leaf 19) (rel2par List) (text _!Journalists and their families are constantly threatened_!) )
                    ( Nucleus (leaf 20) (rel2par List) (text _!as are the newspaper distribution outlets._!) )
                  )
                  ( Nucleus (span 21 22) (rel2par List)
                    ( Nucleus (leaf 21) (rel2par List) (text _!Distribution centers are bombed,_!) )
                    ( Nucleus (leaf 22) (rel2par List) (text _!and advertisers are intimidated._!) )
                  )
                )
              )
            )
            ( Satellite (leaf 23) (rel2par restatement) (text _!Censorship is imposed by terrorism._!) )
          )
        )
        ( Nucleus (span 24 29) (rel2par span)
          ( Nucleus (span 24 27) (rel2par Problem-Solution)
            ( Satellite (leaf 24) (rel2par condition) (text _!If the Colombian media accept this new and hideous censorship_!) )
            ( Nucleus (span 25 27) (rel2par span)
              ( Nucleus (leaf 25) (rel2par span) (text _!there is little doubt_!) )
              ( Satellite (span 26 27) (rel2par elaboration-object-attribute-e)
                ( Nucleus (leaf 26) (rel2par span) (text _!that the drug mafia's terrorism someday will extend to all the newspapers_!) )
                ( Satellite (leaf 27) (rel2par elaboration-object-attribute-e) (text _!published in the free world._!) )
              )
            )
          )
          ( Nucleus (span 28 29) (rel2par Problem-Solution)
            ( Nucleus (leaf 28) (rel2par span) (text _!The solidarity of the uncensored media world-wide against drug terrorism is the only way_!) )
            ( Satellite (leaf 29) (rel2par elaboration-object-attribute-e) (text _!press freedom can survive._!) )
          )
        )
      )
      ( Nucleus (span 30 34) (rel2par Topic-Drift)
        ( Nucleus (span 30 31) (rel2par span)
          ( Nucleus (leaf 30) (rel2par span) (text _!The American people and their government also woke up too late to the menace_!) )
          ( Satellite (leaf 31) (rel2par elaboration-object-attribute-e) (text _!drugs posed to the moral structure of their country._!) )
        )
        ( Satellite (span 32 34) (rel2par elaboration-additional)
          ( Nucleus (leaf 32) (rel2par span) (text _!Even now, the American attack upon this tremendous problem is timid in relation to the magnitude of the threat._!) )
          ( Satellite (span 33 34) (rel2par example)
            ( Nucleus (leaf 33) (rel2par span) (text _!I can attest_!) )
            ( Satellite (leaf 34) (rel2par attribution) (text _!that a recent Colombian visitor to the U.S. was offered drugs three times in the few blocks' walk between Grand Central Terminal and the Waldorf Astoria Hotel in midtown Manhattan._!) )
          )
        )
      )
      ( Nucleus (span 35 77) (rel2par Topic-Drift)
        ( Nucleus (span 35 41) (rel2par span)
          ( Nucleus (span 35 40) (rel2par span)
            ( Nucleus (span 35 38) (rel2par Problem-Solution)
              ( Nucleus (span 35 36) (rel2par Same-Unit)
                ( Nucleus (leaf 35) (rel2par span) (text _!Colombia alone_!) )
                ( Satellite (leaf 36) (rel2par elaboration-general-specific-e) (text _!-- its government, its people, its newspapers--_!) )
              )
              ( Nucleus (span 37 38) (rel2par Same-Unit)
                ( Nucleus (leaf 37) (rel2par span) (text _!does not have the capacity_!) )
                ( Satellite (leaf 38) (rel2par elaboration-object-attribute-e) (text _!to fight this battle successfully._!) )
              )
            )
            ( Nucleus (span 39 40) (rel2par Problem-Solution)
              ( Nucleus (leaf 39) (rel2par span) (text _!All drug-consuming countries must jointly decide to combat and punish the consumers and distributors of drugs._!) )
              ( Satellite (leaf 40) (rel2par elaboration-general-specific) (text _!The U.S., as the major drug consumer, should lead this joint effort._!) )
            )
          )
          ( Satellite (leaf 41) (rel2par interpretation-s) (text _!Reduction, if not the total cessation, of drug consumption is the requirement for victory._!) )
        )
        ( Satellite (span 42 77) (rel2par elaboration-additional)
          ( Nucleus (span 42 51) (rel2par span)
            ( Nucleus (span 42 48) (rel2par span)
              ( Nucleus (span 42 43) (rel2par span)
                ( Nucleus (leaf 42) (rel2par span) (text _!Much is being done in Colombia_!) )
                ( Satellite (leaf 43) (rel2par purpose) (text _!to fight the drug cartel mafia._!) )
              )
              ( Satellite (span 44 48) (rel2par evidence)
                ( Nucleus (span 44 45) (rel2par List)
                  ( Nucleus (leaf 44) (rel2par List) (text _!Luxurious homes and ranches have been raided by the military authorities,_!) )
                  ( Nucleus (leaf 45) (rel2par List) (text _!and sophisticated and powerful communications equipment have been seized._!) )
                )
                ( Nucleus (span 46 47) (rel2par List)
                  ( Nucleus (leaf 46) (rel2par List) (text _!More than 300 planes and helicopters have been impounded at airports,_!) )
                  ( Nucleus (leaf 47) (rel2par List) (text _!and a large number of vehicles and launches has been confiscated._!) )
                )
                ( Nucleus (leaf 48) (rel2par List) (text _!The military has also captured enormous arsenals of powerful and sophisticated weapons, explosives and other war-like materiel._!) )
              )
            )
            ( Satellite (span 49 51) (rel2par elaboration-additional)
              ( Satellite (span 49 50) (rel2par concession)
                ( Nucleus (leaf 49) (rel2par span) (text _!Much has been accomplished_!) )
                ( Satellite (leaf 50) (rel2par elaboration-additional) (text _!and public opinion decisively supports the government and the army_!) )
              )
              ( Nucleus (leaf 51) (rel2par span) (text _!-- but, on the other hand, none of the key drug barons have been captured._!) )
            )
          )
          ( Satellite (span 52 77) (rel2par elaboration-additional)
            ( Nucleus (span 52 63) (rel2par span)
              ( Satellite (span 52 62) (rel2par evaluation-n)
                ( Nucleus (span 52 53) (rel2par span)
                  ( Nucleus (leaf 52) (rel2par span) (text _!There has been a lot of talk_!) )
                  ( Satellite (leaf 53) (rel2par elaboration-object-attribute-e) (text _!that a large portion of the Colombian economy is sustained by the laundering of drug money._!) )
                )
                ( Satellite (span 54 62) (rel2par evaluation-s)
                  ( Nucleus (leaf 54) (rel2par span) (text _!In my opinion, this is not true._!) )
                  ( Satellite (span 55 62) (rel2par evidence)
                    ( Satellite (span 55 60) (rel2par concession)
                      ( Nucleus (span 55 57) (rel2par List)
                        ( Nucleus (leaf 55) (rel2par span) (text _!Laundered drug money has served only to increase, unrealistically, the price of real estate,_!) )
                        ( Satellite (span 56 57) (rel2par cause)
                          ( Nucleus (leaf 56) (rel2par span) (text _!creating serious problems for low-income people_!) )
                          ( Satellite (leaf 57) (rel2par elaboration-object-attribute-e) (text _!who aspire to own their own homes._!) )
                        )
                      )
                      ( Nucleus (span 58 60) (rel2par List)
                        ( Nucleus (leaf 58) (rel2par span) (text _!Drug money has also gone_!) )
                        ( Satellite (span 59 60) (rel2par purpose)
                          ( Nucleus (leaf 59) (rel2par span) (text _!to buy expensive cars, airplanes, launches and nightclubs_!) )
                          ( Satellite (leaf 60) (rel2par elaboration-object-attribute-e) (text _!where drugs are consumed._!) )
                        )
                      )
                    )
                    ( Nucleus (span 61 62) (rel2par span)
                      ( Nucleus (leaf 61) (rel2par span) (text _!But most of the drug money is kept in investments and in financial institutions outside Colombia._!) )
                      ( Satellite (leaf 62) (rel2par elaboration-additional) (text _!In fact, the cooperation of those financial institutions is essential to the success of the drug battle._!) )
                    )
                  )
                )
              )
              ( Nucleus (leaf 63) (rel2par span) (text _!What is of much more importance to the Colombian economy than the supposed benefits of laundered drug money is higher prices for Colombia 's legitimate products._!) )
            )
            ( Satellite (span 64 77) (rel2par evidence)
              ( Nucleus (span 64 71) (rel2par List)
                ( Nucleus (span 64 67) (rel2par List)
                  ( Nucleus (span 64 66) (rel2par span)
                    ( Nucleus (span 64 65) (rel2par Same-Unit)
                      ( Nucleus (leaf 64) (rel2par span) (text _!The price of coffee has gone down almost 45% since the beginning of the year, to the lowest level_!) )
                      ( Satellite (leaf 65) (rel2par elaboration-object-attribute-e) (text _!(after inflation)_!) )
                    )
                    ( Nucleus (leaf 66) (rel2par Same-Unit) (text _!since the Great Depression._!) )
                  )
                  ( Satellite (leaf 67) (rel2par elaboration-additional) (text _!Market conditions point to even lower prices next year._!) )
                )
                ( Nucleus (span 68 69) (rel2par List)
                  ( Satellite (leaf 68) (rel2par consequence-n) (text _!The 27-year-old coffee cartel had to be formally dissolved this summer._!) )
                  ( Nucleus (leaf 69) (rel2par span) (text _!As a result, Colombia will earn $500 million less from its coffee this year than last._!) )
                )
                ( Nucleus (span 70 71) (rel2par List)
                  ( Satellite (leaf 70) (rel2par consequence-n) (text _!Our coffee growers face reductions in their income,_!) )
                  ( Nucleus (leaf 71) (rel2par span) (text _!and this tempts them to contemplate substituting coca crops for coffee._!) )
                )
              )
              ( Nucleus (span 72 77) (rel2par List)
                ( Nucleus (span 72 74) (rel2par Problem-Solution)
                  ( Nucleus (span 72 73) (rel2par Same-Unit)
                    ( Nucleus (leaf 72) (rel2par span) (text _!U.S. interests occasionally try to impose barriers to the import of another important Colombian export_!) )
                    ( Satellite (leaf 73) (rel2par elaboration-general-specific-e) (text _!-- cut flowers --_!) )
                  )
                  ( Nucleus (leaf 74) (rel2par Same-Unit) (text _!into the American market._!) )
                )
                ( Nucleus (span 75 77) (rel2par Problem-Solution)
                  ( Nucleus (span 75 76) (rel2par Same-Unit)
                    ( Nucleus (leaf 75) (rel2par span) (text _!A just price and an open market_!) )
                    ( Satellite (leaf 76) (rel2par elaboration-object-attribute-e) (text _!for what Colombian produces and exports_!) )
                  )
                  ( Nucleus (leaf 77) (rel2par Same-Unit) (text _!should be the policy of the U.S._!) )
                )
              )
            )
          )
        )
      )
    )
    ( Satellite (span 78 85) (rel2par comment)
      ( Nucleus (span 78 82) (rel2par span)
        ( Nucleus (span 78 79) (rel2par span)
          ( Nucleus (leaf 78) (rel2par span) (text _!I take advantage of this opportunity_!) )
          ( Satellite (leaf 79) (rel2par elaboration-object-attribute-e) (text _!given to me by The Wall Street Journal_!) )
        )
        ( Satellite (span 80 82) (rel2par purpose)
          ( Nucleus (leaf 80) (rel2par span) (text _!to make a plea to the millions of readers of this newspaper,_!) )
          ( Satellite (span 81 82) (rel2par elaboration-object-attribute-e)
            ( Nucleus (leaf 81) (rel2par span) (text _!to become soldiers_!) )
            ( Satellite (leaf 82) (rel2par elaboration-object-attribute-e) (text _!dedicated to the fight against the use of drugs._!) )
          )
        )
      )
      ( Satellite (span 83 85) (rel2par elaboration-general-specific)
        ( Nucleus (span 83 84) (rel2par List)
          ( Nucleus (leaf 83) (rel2par span) (text _!Each gram of cocaine consumed is a deadly bullet against those in our country and in the rest of the world_!) )
          ( Satellite (leaf 84) (rel2par elaboration-object-attribute-e) (text _!who fight this terrible scourge._!) )
        )
        ( Nucleus (leaf 85) (rel2par List) (text _!A crusade of NO to the consumption of drugs is imperative._!) )
      )
    )
  )
  ( Nucleus (span 86 87) (rel2par TextualOrganization)
    ( Nucleus (leaf 86) (rel2par span) (text _!Mr. Cano is president of El Espectador, a newspaper_!) )
    ( Satellite (leaf 87) (rel2par elaboration-object-attribute-e) (text _!founded by_!) )
  )
