( Root (span 1 88)
  ( Nucleus (span 1 83) (rel2par TextualOrganization)
    ( Nucleus (span 1 80) (rel2par span)
      ( Nucleus (span 1 58) (rel2par span)
        ( Nucleus (span 1 3) (rel2par span)
          ( Nucleus (leaf 1) (rel2par span) (text _!A surprising surge in the U.S. trade deficit raised fears_!) )
          ( Satellite (span 2 3) (rel2par elaboration-object-attribute-e)
            ( Nucleus (leaf 2) (rel2par List) (text _!that the nation's export drive has stalled,_!) )
            ( Nucleus (leaf 3) (rel2par List) (text _!and caused new turmoil in financial markets._!) )
          )
        )
        ( Satellite (span 4 58) (rel2par elaboration-additional)
          ( Nucleus (span 4 51) (rel2par span)
            ( Nucleus (span 4 8) (rel2par span)
              ( Nucleus (span 4 6) (rel2par span)
                ( Nucleus (span 4 5) (rel2par Same-Unit)
                  ( Nucleus (leaf 4) (rel2par span) (text _!The merchandise trade deficit widened in August to $10.77 billion,_!) )
                  ( Satellite (leaf 5) (rel2par attribution-e) (text _!the Commerce Department reported,_!) )
                )
                ( Nucleus (leaf 6) (rel2par Same-Unit) (text _!a sharp deterioration from July's $8.24 billion and the largest deficit of any month this year._!) )
              )
              ( Satellite (span 7 8) (rel2par elaboration-additional)
                ( Nucleus (leaf 7) (rel2par Comparison) (text _!Exports fell for the second month in a row,_!) )
                ( Nucleus (leaf 8) (rel2par Comparison) (text _!while imports rose to a record._!) )
              )
            )
            ( Satellite (span 9 51) (rel2par explanation-argumentative)
              ( Nucleus (span 9 27) (rel2par span)
                ( Nucleus (span 9 12) (rel2par span)
                  ( Nucleus (span 9 11) (rel2par span)
                    ( Nucleus (span 9 10) (rel2par span)
                      ( Nucleus (leaf 9) (rel2par span) (text _!"This is one of the worst trade releases_!) )
                      ( Satellite (leaf 10) (rel2par elaboration-object-attribute-e) (text _!we've had_!) )
                    )
                    ( Satellite (leaf 11) (rel2par circumstance) (text _!since the dollar troughed out in 1987,"_!) )
                  )
                  ( Satellite (leaf 12) (rel2par attribution) (text _!said Geoffrey Dennis, chief international economist at James Capel Inc._!) )
                )
                ( Satellite (span 13 27) (rel2par elaboration-additional)
                  ( Nucleus (span 13 17) (rel2par span)
                    ( Nucleus (leaf 13) (rel2par Contrast) (text _!Like most analysts, Mr. Dennis was hesitant to read too much into one month's numbers;_!) )
                    ( Nucleus (span 14 17) (rel2par Contrast)
                      ( Satellite (leaf 14) (rel2par attribution) (text _!but he said,_!) )
                      ( Nucleus (span 15 17) (rel2par span)
                        ( Satellite (leaf 15) (rel2par attribution) (text _!"It indicates perhaps_!) )
                        ( Nucleus (span 16 17) (rel2par span)
                          ( Nucleus (leaf 16) (rel2par Comparison) (text _!that the balance in the U.S. economy is not as good_!) )
                          ( Nucleus (leaf 17) (rel2par Comparison) (text _!as we've been led to believe."_!) )
                        )
                      )
                    )
                  )
                  ( Satellite (span 18 27) (rel2par elaboration-additional)
                    ( Nucleus (span 18 20) (rel2par span)
                      ( Nucleus (leaf 18) (rel2par span) (text _!The number had a troubling effect on Wall Street,_!) )
                      ( Satellite (span 19 20) (rel2par elaboration-additional)
                        ( Satellite (leaf 19) (rel2par attribution) (text _!suggesting_!) )
                        ( Nucleus (leaf 20) (rel2par span) (text _!that more fundamental economic problems may underlie last Friday's stock market slide._!) )
                      )
                    )
                    ( Satellite (span 21 27) (rel2par elaboration-additional)
                      ( Nucleus (span 21 23) (rel2par span)
                        ( Nucleus (leaf 21) (rel2par Sequence) (text _!The Dow Jones Industrial Average tumbled more than 60 points after the report's release,_!) )
                        ( Nucleus (span 22 23) (rel2par Sequence)
                          ( Nucleus (leaf 22) (rel2par span) (text _!before recovering_!) )
                          ( Satellite (leaf 23) (rel2par consequence-s) (text _!to close 18.65 points lower at 2638.73._!) )
                        )
                      )
                      ( Satellite (span 24 27) (rel2par elaboration-additional)
                        ( Nucleus (span 24 25) (rel2par span)
                          ( Nucleus (leaf 24) (rel2par span) (text _!"This bad trade number raises some deeper issues about the market decline,"_!) )
                          ( Satellite (leaf 25) (rel2par attribution) (text _!said Norman Robertson, chief economist for Mellon Bank._!) )
                        )
                        ( Satellite (span 26 27) (rel2par elaboration-additional)
                          ( Nucleus (leaf 26) (rel2par span) (text _!"It raises questions about more deep-seated problems, the budget deficit and the trade deficit and the seeming lack of ability_!) )
                          ( Satellite (leaf 27) (rel2par elaboration-object-attribute-e) (text _!to come to grips with them."_!) )
                        )
                      )
                    )
                  )
                )
              )
              ( Satellite (span 28 51) (rel2par elaboration-additional)
                ( Nucleus (span 28 32) (rel2par span)
                  ( Nucleus (leaf 28) (rel2par span) (text _!The trade report drew yet another unsettling parallel to October 1987._!) )
                  ( Satellite (span 29 32) (rel2par explanation-argumentative)
                    ( Satellite (span 29 30) (rel2par concession)
                      ( Nucleus (leaf 29) (rel2par span) (text _!On Oct. 14 of that year, the announcement of an unusually large August trade deficit helped trigger a steep market decline._!) )
                      ( Satellite (leaf 30) (rel2par elaboration-additional) (text _!The slide continued until the record 508-point market drop on Oct. 19._!) )
                    )
                    ( Nucleus (span 31 32) (rel2par span)
                      ( Nucleus (leaf 31) (rel2par Contrast) (text _!In 1987, however, the news was the latest in a string of disappointments on trade,_!) )
                      ( Nucleus (leaf 32) (rel2par Contrast) (text _!while the current report comes after a period of improvement._!) )
                    )
                  )
                )
                ( Satellite (span 33 51) (rel2par elaboration-additional)
                  ( Nucleus (leaf 33) (rel2par span) (text _!The bleak trade report was played down by the Bush administration._!) )
                  ( Satellite (span 34 51) (rel2par explanation-argumentative)
                    ( Nucleus (leaf 34) (rel2par List) (text _!Commerce Secretary Robert Mosbacher called the worsening trade figures "disappointing after two very good months."_!) )
                    ( Nucleus (span 35 51) (rel2par List)
                      ( Satellite (span 35 40) (rel2par concession)
                        ( Nucleus (span 35 36) (rel2par span)
                          ( Satellite (leaf 35) (rel2par attribution) (text _!And White House spokesman Marlin Fitzwater said_!) )
                          ( Nucleus (leaf 36) (rel2par span) (text _!the deficit was "an unwelcome increase,"_!) )
                        )
                        ( Satellite (span 37 40) (rel2par elaboration-additional)
                          ( Satellite (leaf 37) (rel2par attribution) (text _!adding_!) )
                          ( Nucleus (span 38 40) (rel2par span)
                            ( Satellite (leaf 38) (rel2par attribution) (text _!that "we're hopeful_!) )
                            ( Nucleus (span 39 40) (rel2par span)
                              ( Nucleus (leaf 39) (rel2par List) (text _!that it simply is a one-month situation_!) )
                              ( Nucleus (leaf 40) (rel2par List) (text _!and will turn around."_!) )
                            )
                          )
                        )
                      )
                      ( Nucleus (span 41 51) (rel2par span)
                        ( Nucleus (span 41 42) (rel2par span)
                          ( Nucleus (leaf 41) (rel2par span) (text _!But the figures reinforced the view of many private analysts_!) )
                          ( Satellite (leaf 42) (rel2par elaboration-object-attribute-e) (text _!that the improvement in the U.S. trade deficit has run out of steam._!) )
                        )
                        ( Satellite (span 43 51) (rel2par explanation-argumentative)
                          ( Nucleus (span 43 46) (rel2par span)
                            ( Nucleus (span 43 45) (rel2par span)
                              ( Nucleus (leaf 43) (rel2par span) (text _!"The figures today add further evidence_!) )
                              ( Satellite (span 44 45) (rel2par elaboration-object-attribute-e)
                                ( Nucleus (leaf 44) (rel2par span) (text _!to support the view_!) )
                                ( Satellite (leaf 45) (rel2par elaboration-object-attribute-e) (text _!that the improvement in the U.S. trade deficit has essentially stalled out at a level of about a $110 billion annual rate,"_!) )
                              )
                            )
                            ( Satellite (leaf 46) (rel2par attribution) (text _!said Jeffrey Scott, a research fellow at the Institute for International Economics here._!) )
                          )
                          ( Satellite (span 47 51) (rel2par elaboration-additional)
                            ( Nucleus (leaf 47) (rel2par Contrast) (text _!"That's still an improvement over last year,_!) )
                            ( Nucleus (span 48 51) (rel2par Contrast)
                              ( Satellite (leaf 48) (rel2par attribution) (text _!but it leads one to conclude_!) )
                              ( Nucleus (span 49 51) (rel2par span)
                                ( Nucleus (span 49 50) (rel2par Same-Unit)
                                  ( Nucleus (leaf 49) (rel2par span) (text _!that basically we've gotten all the mileage_!) )
                                  ( Satellite (leaf 50) (rel2par elaboration-object-attribute-e) (text _!we can_!) )
                                )
                                ( Nucleus (leaf 51) (rel2par Same-Unit) (text _!out of past dollar depreciation and past marginal cuts in the federal budget deficit."_!) )
                              )
                            )
                          )
                        )
                      )
                    )
                  )
                )
              )
            )
          )
          ( Satellite (span 52 58) (rel2par elaboration-additional)
            ( Nucleus (span 52 55) (rel2par span)
              ( Nucleus (span 52 54) (rel2par Contrast)
                ( Nucleus (span 52 53) (rel2par span)
                  ( Nucleus (leaf 52) (rel2par span) (text _!Exports declined for the second consecutive month in August,_!) )
                  ( Satellite (leaf 53) (rel2par elaboration-additional) (text _!slipping 0.2% to $30.41 billion,_!) )
                )
                ( Satellite (leaf 54) (rel2par attribution) (text _!the Commerce Department reported._!) )
              )
              ( Nucleus (leaf 55) (rel2par Contrast) (text _!Imports, on the other hand, leaped 6.4% to a record $41.18 billion._!) )
            )
            ( Satellite (span 56 58) (rel2par elaboration-additional)
              ( Satellite (leaf 56) (rel2par antithesis) (text _!Not only was August's deficit far worse than July's,_!) )
              ( Nucleus (span 57 58) (rel2par span)
                ( Nucleus (leaf 57) (rel2par span) (text _!but the government revised the July figure substantially from the $7.58 billion deficit_!) )
                ( Satellite (leaf 58) (rel2par elaboration-object-attribute-e) (text _!it had initially reported last month._!) )
              )
            )
          )
        )
      )
      ( Satellite (span 59 80) (rel2par elaboration-additional)
        ( Nucleus (span 59 61) (rel2par span)
          ( Satellite (leaf 59) (rel2par attribution) (text _!Many economists contend_!) )
          ( Nucleus (span 60 61) (rel2par span)
            ( Satellite (leaf 60) (rel2par circumstance) (text _!that deep cuts in the U.S. budget deficit are needed_!) )
            ( Nucleus (leaf 61) (rel2par span) (text _!before further trade improvement can occur._!) )
          )
        )
        ( Satellite (span 62 80) (rel2par result)
          ( Nucleus (span 62 63) (rel2par span)
            ( Nucleus (leaf 62) (rel2par span) (text _!That's because the budget deficit feeds an enormous appetite in this country for both foreign goods and foreign capital,_!) )
            ( Satellite (leaf 63) (rel2par cause) (text _!overwhelming the nation's capacity to export._!) )
          )
          ( Satellite (span 64 80) (rel2par explanation-argumentative)
            ( Nucleus (span 64 67) (rel2par span)
              ( Nucleus (span 64 66) (rel2par span)
                ( Nucleus (leaf 64) (rel2par Contrast) (text _!"People are sick and tired of hearing about these deficits,_!) )
                ( Nucleus (span 65 66) (rel2par Contrast)
                  ( Nucleus (leaf 65) (rel2par List) (text _!but the imbalances are still there_!) )
                  ( Nucleus (leaf 66) (rel2par List) (text _!and they are still a problem,"_!) )
                )
              )
              ( Satellite (leaf 67) (rel2par attribution) (text _!said Mr. Robertson._!) )
            )
            ( Satellite (span 68 80) (rel2par elaboration-additional)
              ( Nucleus (span 68 73) (rel2par span)
                ( Nucleus (span 68 70) (rel2par Temporal-Same-Time)
                  ( Nucleus (span 68 69) (rel2par span)
                    ( Nucleus (leaf 68) (rel2par List) (text _!In addition, the rise in the value of the dollar against foreign currencies over the past several months has increased the price of U.S. products in overseas markets_!) )
                    ( Nucleus (leaf 69) (rel2par List) (text _!and hurt the country's competitiveness._!) )
                  )
                  ( Satellite (leaf 70) (rel2par explanation-argumentative) (text _!Since March, exports have been virtually flat._!) )
                )
                ( Nucleus (span 71 73) (rel2par Temporal-Same-Time)
                  ( Satellite (leaf 71) (rel2par attribution) (text _!At the same time, William T. Archey, international vice president at the U.S. Chamber of Commerce, notes:_!) )
                  ( Nucleus (span 72 73) (rel2par span)
                    ( Nucleus (leaf 72) (rel2par span) (text _!"Clearly the stronger dollar has made imports more attractive"_!) )
                    ( Satellite (leaf 73) (rel2par means) (text _!by causing their prices to decline._!) )
                  )
                )
              )
              ( Satellite (span 74 80) (rel2par elaboration-additional)
                ( Nucleus (span 74 75) (rel2par span)
                  ( Nucleus (leaf 74) (rel2par Contrast) (text _!Most economists expect the slowing U.S. economy to curb demand for imports._!) )
                  ( Nucleus (leaf 75) (rel2par Contrast) (text _!But they foresee little substantial progress in exports unless the dollar and the federal budget deficit come down._!) )
                )
                ( Satellite (span 76 80) (rel2par explanation-argumentative)
                  ( Nucleus (span 76 79) (rel2par span)
                    ( Nucleus (span 76 78) (rel2par span)
                      ( Nucleus (span 76 77) (rel2par Same-Unit)
                        ( Nucleus (leaf 76) (rel2par span) (text _!"The best result_!) )
                        ( Satellite (leaf 77) (rel2par elaboration-object-attribute-e) (text _!we could get from these numbers_!) )
                      )
                      ( Nucleus (leaf 78) (rel2par Same-Unit) (text _!would be to see the administration and Congress get serious about putting the U.S. on an internationally competitive economic footing,"_!) )
                    )
                    ( Satellite (leaf 79) (rel2par attribution) (text _!said Howard Lewis, vice president of international economic affairs at the National Association of Manufacturers._!) )
                  )
                  ( Satellite (leaf 80) (rel2par elaboration-additional) (text _!"That must start with cutting the federal budget deficit."_!) )
                )
              )
            )
          )
        )
      )
    )
    ( Satellite (span 81 83) (rel2par elaboration-additional)
      ( Nucleus (span 81 82) (rel2par span)
        ( Nucleus (leaf 81) (rel2par List) (text _!August's decline in exports reflected decreases in sales of industrial supplies, capital goods and food abroad and increases in sales of motor vehicles, parts and engines._!) )
        ( Nucleus (leaf 82) (rel2par List) (text _!The jump in imports stemmed from across-the-board increases in purchases of foreign goods._!) )
      )
      ( Satellite (leaf 83) (rel2par elaboration-additional) (text _!The numbers were adjusted for usual seasonal fluctuations._!) )
    )
  )
  ( Nucleus (leaf 84) (rel2par TextualOrganization) (text _!Alan Murray contributed to this article._!) )
  ( Nucleus (leaf 85) (rel2par TextualOrganization) (text _!(In billions of U.S. dollars, not seasonally adjusted)_!) )
